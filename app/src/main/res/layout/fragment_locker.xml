<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b0eff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yorshahar.locker.fragment.LockerFragment">

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="9:38"
        android:textColor="#ffffffff"
        android:textSize="100sp"
        android:layout_marginTop="-10dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeTextView"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"
        android:text="@string/sample_date"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:layout_marginTop="-18dp" />

    <com.yorshahar.locker.ui.widget.ShinyTextView
        android:id="@+id/unlockTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:focusableInTouchMode="true"
        android:text="@string/slide_to_unlock_text"
        android:textColor="#FFFFFFFF"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/notificationsListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/unlockTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateTextView"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:divider="#6a6376"
        android:dividerHeight="1sp"
        android:fadingEdgeLength="0dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:overScrollFooter="#00000000"
        android:overScrollHeader="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />

</RelativeLayout>

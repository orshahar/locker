<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b0eff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yorshahar.locker.fragment.LockerFragment">

    <com.yorshahar.locker.ui.widget.CustomDigitalClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:inputType="time"
        android:text="@string/digital_clock"
        android:textColor="#ffffffff"
        android:textSize="92sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textClock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-3dp"
        android:focusableInTouchMode="true"
        android:text="@string/sample_date"
        android:textColor="#ffffffff"
        android:textSize="20sp" />

    <com.yorshahar.locker.ui.widget.ShinyTextView
        android:id="@+id/unlockTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:focusableInTouchMode="true"
        android:text="@string/slide_to_unlock_text"
        android:textColor="#FFFFFFFF"
        android:textSize="26sp" />

    <ListView
        android:id="@+id/notificationsListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/unlockTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateTextView"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:divider="#6a6376"
        android:dividerHeight="1sp"
        android:scrollbars="none" />


</RelativeLayout>
